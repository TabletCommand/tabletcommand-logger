{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "../definitions",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../build",
    "paths": {
      "*": [
        "../node_modules/@types/*",
        "*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  }
}
